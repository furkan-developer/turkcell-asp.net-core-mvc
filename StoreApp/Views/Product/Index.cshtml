@model ProductListViewModel

@{
    var products = Model.Products;
}

<div class="row">
    <div class="col-md-3">
       @await Component.InvokeAsync("CategoriesSideBar")
       @await Component.InvokeAsync("ProductFilterSideBar")
    </div>
    <div class="col-md-9">
        <table class="table table-success table-striped">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Product Name</th>
                    <th scope="col">Price</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @{
                    int i = 0;
                    foreach (ProductDto item in products)
                    {
                        <tr>
                            <th scope="row">@i</th>
                            <td>@item.Name</td>
                            <td>@item.Price</td>
                            <td class="d-flex "><a asp-action="Detail" asp-route-id="@item.Id" asp-asp-controller="Product"
                                    class="btn btn-info">
                                    <i class="fa-solid fa-circle-info"></i>Detail
                                </a>
                                <form asp-page="/Carts/Index">
                                    <input type="hidden" name="ProductId" value="@item.Id">
                                    <button type="submit" class="btn btn-primary" ><i class="fa-solid fa-cart-plus fa-beat-fade"></i></button>
                                </form>
                            </td>
                        </tr>
                        i++;
                    }
                }
            </tbody>
        </table>
    </div>
</div>

